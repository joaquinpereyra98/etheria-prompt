<div class="etheria-prompt dialog-content">
    <label>{{{labelDialog}}}</label>
    <div class="dice-div">
        <div class="die-container">
            <span class="die-icon">{{rollData.result}}</span>
        </div>
        <div class="formula-container">
            <label>Formula: {{rollData.formula}}</label>
            <label>Modifier: {{rollData.mod}}</label>
            <label>Dice Results:</label>
                {{#each rollData.dice as |die|}}
                <label> 
                    <i class="fa-solid fa-dice-d{{faces}}"></i>
                    {{die.formula}}: 
                    {{#each die.results as |resultObj|}}
                        {{resultObj.result}}
                    {{/each}}
                </label>
                {{/each}}
        </div>
    </div>
</div>